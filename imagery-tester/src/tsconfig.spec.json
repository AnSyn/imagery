{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "module": "commonjs",
    "types": [
      "jasmine",
      "node"
    ]
  },
  "files": [
    "test.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts",
    "../../**/*.spec.ts",
    "../../**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules/**/*.spec.ts",
    "node_modules/**/*.d.ts"
  ]
}
